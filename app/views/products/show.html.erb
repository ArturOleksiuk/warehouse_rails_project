<div class="row justify-content-center">
  <div class="col-lg-10">
    
    <div class="card shadow-sm mb-5">
      <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><%= @product.name %></h3>
        <span class="badge bg-light text-primary fs-6"><%= @product.category ? @product.category.name : "Без категорії" %></span>
      </div>
      
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <h2 class="text-success fw-bold mb-3">
              <%= number_to_currency(@product.price, unit: " грн", format: "%n %u") %>
            </h2>
            
            <p class="fs-5">
              <strong>Постачальник:</strong> 
              <%= @product.supplier ? @product.supplier.company_name : "Не вказано" %>
            </p>
            
            <p class="fs-5">
              <strong>Залишок на складі:</strong> 
              <% if @product.quantity > 0 %>
                <span class="badge bg-success">В наявності: <%= @product.quantity %> шт.</span>
              <% else %>
                <span class="badge bg-danger">Немає в наявності</span>
              <% end %>
            </p>
          </div>

          <div class="col-md-4 d-flex flex-column justify-content-center align-items-md-end mt-3 mt-md-0 gap-2">
            <%= link_to "Редагувати", edit_product_path(@product), class: "btn btn-warning w-100" %>
            <%= link_to "До списку", products_path, class: "btn btn-outline-secondary w-100" %>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-header bg-light border-bottom">
        <h4 class="mb-0">Відгуки користувачів <span class="badge bg-primary rounded-pill"><%= @product.reviews.count %></span></h4>
      </div>
      
      <div class="card-body">
        <% if @product.reviews.any? %>
          <div class="list-group list-group-flush mb-4">
            <% @product.reviews.each do |review| %>
              <div class="list-group-item px-0 py-3">
                <div class="d-flex w-100 justify-content-between align-items-center mb-2">
                  <h6 class="mb-0 fw-bold text-primary">
                    <%= review.author %>
                  </h6>
                  <small class="text-muted"><%= time_ago_in_words(review.created_at) %> тому</small>
                </div>
                
                <p class="mb-2 bg-light p-2 rounded"><%= review.content %></p>
                
                <div class="text-end">
                  <%= link_to "Видалити відгук", product_review_path(@product, review), 
                      data: { turbo_method: :delete, turbo_confirm: "Видалити цей відгук?" }, 
                      class: "btn btn-sm btn-outline-danger border-0" %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-info text-center my-4">
            Поки немає відгуків про цей товар. Ваш може бути першим!
          </div>
        <% end %>

        <div class="card bg-light border-0">
          <div class="card-body">
            <h5 class="card-title mb-3">Залишити відгук</h5>
            <%= form_with(model: [ @product, @product.reviews.build ], local: true) do |form| %>
              <div class="row g-3">
                <div class="col-md-4">
                  <%= form.label :author, "Ваше ім'я", class: "form-label visually-hidden" %>
                  <%= form.text_field :author, class: "form-control", placeholder: "Ваше ім'я" %>
                </div>
                <div class="col-md-8">
                  <%= form.label :content, "Текст відгуку", class: "form-label visually-hidden" %>
                  <div class="input-group">
                    <%= form.text_field :content, class: "form-control", placeholder: "Напишіть ваші враження..." %>
                    <%= form.submit "Надіслати", class: "btn btn-primary" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>