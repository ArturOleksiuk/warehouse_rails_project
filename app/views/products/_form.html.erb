<%= form_with(model: product, local: true) do |form| %>

  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h4>Помилок: <%= product.errors.count %></h4>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Назва товару", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, "Ціна", class: "form-label" %>
    <%= form.number_field :price, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, "Кількість", class: "form-label" %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Категорія", class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, {}, {class: "form-select"} %>
  </div>

  <div class="mb-3">
    <%= form.label :supplier_id, "Постачальник", class: "form-label" %>
    <%= form.collection_select :supplier_id, Supplier.all, :id, :company_name, { prompt: "Оберіть постачальника" }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.submit "Зберегти товар", class: "btn btn-success" %>
  </div>
<% end %>
