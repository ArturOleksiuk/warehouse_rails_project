<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Категорії товарів</h1>
  <%= link_to "Нова категорія", new_category_path, class: "btn btn-success" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Кількість товарів</th>
            <th class="text-end" style="width: 200px">Дії</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td class="fw-bold fs-5"><%= category.name %></td>
              <td><%= truncate(category.description, length: 50) %></td>
              <td>
                <% if category.products.count > 0 %>
                  <span class="badge bg-primary"><%= category.products.count %></span>
                <% else %>
                  <span class="badge bg-secondary">0</span>
                <% end %>
              </td>
              <td class="text-end">
                <div class="btn-group" role="group">
                  <%= link_to "Огляд", category, class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Ред.", edit_category_path(category), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Вид.", category, data: { turbo_method: :delete, turbo_confirm: "Ви впевнені? Це може вплинути на товари." }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
