<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Постачальники</h1>
  <%= link_to "Додати постачальника", new_supplier_path, class: "btn btn-success" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Компанія</th>
            <th>Контактна особа</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Товарів</th>
            <th class="text-end">Дії</th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td class="fw-bold"><%= supplier.company_name %></td>
              <td><%= supplier.contact_name %></td>
              <td><%= supplier.phone %></td>
              <td>
                <% if supplier.email.present? %>
                  <a href="mailto:<%= supplier.email %>" class="text-decoration-none"><%= supplier.email %></a>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td>
                <span class="badge bg-secondary"><%= supplier.products.count %></span>
              </td>
              <td class="text-end">
                <div class="btn-group" role="group">
                  <%= link_to "Огляд", supplier, class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Ред.", edit_supplier_path(supplier), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Вид.", supplier, data: { turbo_method: :delete, turbo_confirm: "Ви впевнені?" }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>