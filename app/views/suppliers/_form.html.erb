<%= form_with(model: supplier, local: true) do |form| %>
  
  <% if supplier.errors.any? %>
    <div class="alert alert-danger">
      <h4>Виправте помилки:</h4>
      <ul>
        <% supplier.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :company_name, "Назва компанії", class: "form-label" %>
    <%= form.text_field :company_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :contact_name, "Контактна особа", class: "form-label" %>
    <%= form.text_field :contact_name, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :phone, "Телефон", class: "form-label" %>
      <%= form.text_field :phone, class: "form-control", placeholder: "+380..." %>
    </div>
    <div class="col-md-6 mb-3">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "mail@example.com" %>
    </div>
  </div>

  <div class="mt-3">
    <%= form.submit "Зберегти", class: "btn btn-success" %>
    <%= link_to "Скасувати", suppliers_path, class: "btn btn-link text-decoration-none" %>
  </div>
<% end %>